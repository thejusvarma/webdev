<%- include("partials/header") %>
<div class="container" >
	<div>
		<h1 style="text-align:center">New Team</h1>
		<div style="width:75%; margin: 30px auto;">
			<form action="/" method="POST">
				
				<div class="form-group row">
					<label class="col-sm-2 col-form-label"><strong> Team Name -</strong></label>
					<div class="col-sm-10">
						<input class="form-control" type="text" name="newteam[teamname]" placeholder="teamname">	
					</div>
				</div>
				
				<div class="form-group row">
					<label class="col-sm-2 col-form-label"><strong> Names -</strong></label>
					<div class="col-sm-10">
						<input class="form-control" type="text" name="newteam[participantone]" placeholder="player 1">
						<input class="form-control" type="text" name="newteam[participanttwo]" placeholder="player 2">	
						<input class="form-control" type="text" name="newteam[participantthree]" placeholder="player 3">	
						<input class="form-control" type="text" name="newteam[participantfour]" placeholder="player 4">	
						<input class="form-control" type="text" name="newteam[participantfive]" placeholder="player 5">	
						<input class="form-control" type="text" name="newteam[participantsix]" placeholder="player 6">	
						<input class="form-control" type="text" name="newteam[participantseven]" placeholder="player 7">	
						<input class="form-control" type="text" name="newteam[participanteight]" placeholder="player 8">	
						<input class="form-control" type="text" name="newteam[participantnine]" placeholder="player 9">	
						<input class="form-control" type="text" name="newteam[participantten]" placeholder="player 10">	
						<input class="form-control" type="text" name="newteam[participanteleven]" placeholder="player 11">
					</div>
				</div>
				
				<div class="form-group row">
					<label class="col-sm-2 col-form-label"><strong> Game -</strong></label>
				<div class="col-md-3">
				<select class="form-control" type="text" name="newteam[sportname]" placeholder="Sport Name">
					<option>Football</option>
					<option>Cricket</option>
					<option>Volleyball</option>
					<option>Basketball</option>
					<option>Koko</option>
				</select>
				</div>
				</div>
				
				<div class="form-group row">
					<label class="col-sm-2 col-form-label"><strong> Year -</strong></label>
				<div class="col-md-2">
					<select class="form-control" type="text" name="newteam[year]" placeholder="year">
						<option>2010</option>
						<option>2011</option>
						<option>2012</option>
						<option>2013</option>
						<option>2014</option>
						<option>2015</option>
						<option>2016</option>
						<option>2017</option>
						<option>2019</option>
						<option>2020</option>
					</select>
					</div>
				</div>

				<div class="form-group row">
					<label class="col-sm-2 col-form-label"><strong>Branch -</strong></label>
				<div class="col-md-2">
					<select class="form-control" type="text" name="newteam[branch]" placeholder="branch">
						<option>CSE</option>
						<option>ECE</option>
						<option>IT</option>
						<option>EEE</option>
						<option>MECH</option>
						<option>CIVIL</option>
						<option>AI</option>
					</select>
					</div>
				</div>



			
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">SUBMIT</button>
				</div>
				
			</form>
			<a href="/">Go back</a>
		</div>
	</div>
</div>
<%- include("partials/footer") %>